{
	"name": "vscode-git-tree-compare",
	"displayName": "Git Tree Compare",
	"description": "Compare your worktree against a base branch or tag, displayed as tree",
	"version": "0.0.1",
	"publisher": "Maik Riechert",
	"engines": {
		"vscode": "^1.13.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:gitTreeCompare"
	],
	"main": "./out/src/extension",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "gitTreeCompare",
					"name": "Git Tree Compare"
				}
			]
		},
		"commands": [
			{
				"command": "gitTreeCompare.diffWithBase",
				"title": "Compare File with Base",
				"category": "Git Tree Compare"
			},
			{
				"command": "gitTreeCompare.changeBase",
				"title": "Change Base...",
				"category": "Git Tree Compare"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "gitTreeCompare.diffWithBase",
					"when": "view == gitTreeCompare && viewItem == file"
				},
				{
					"command": "gitTreeCompare.changeBase",
					"when": "view == gitTreeCompare && viewItem == ref"
				}
			]
		},
		"configuration": {
			"title": "Git Tree Compare",
			"properties": {
				"gitTreeCompare.root": {
					"type": "string",
					"enum": [
						"workspace",
						"repository"
					],
					"description": "The root of the tree when the workspace folder is not the same as the repository root",
					"default": "workspace"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"typescript": "^2.3.4",
		"vscode": "^1.1.0",
		"@types/node": "*"
	},
	"dependencies": {
		"iconv-lite": "^0.4.15",
		"vscode-nls": "^2.0.1"
	}
}